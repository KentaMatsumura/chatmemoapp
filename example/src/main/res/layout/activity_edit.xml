<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".EditActivity">

    <EditText
        android:id="@+id/title_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_32dp"
        android:layout_marginLeft="@dimen/layout_margin_32dp"
        android:layout_marginTop="@dimen/layout_margin_32dp"
        android:layout_marginEnd="@dimen/layout_margin_32dp"
        android:layout_marginRight="@dimen/layout_margin_32dp"
        android:hint="@string/edit_title_hint"
        android:text=""
        android:textSize="@dimen/layout_text_32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/layout_margin_32dp"
        android:layout_marginLeft="@dimen/layout_margin_32dp"
        android:layout_marginTop="@dimen/layout_margin_32dp"
        android:layout_marginEnd="@dimen/layout_margin_32dp"
        android:layout_marginRight="@dimen/layout_margin_32dp"
        android:layout_weight="1"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/edit_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_32dp"
        android:layout_marginLeft="@dimen/layout_margin_32dp"
        android:layout_marginTop="@dimen/layout_margin_32dp"
        android:layout_marginEnd="@dimen/layout_margin_32dp"
        android:layout_marginRight="@dimen/layout_margin_32dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/layout_text_28sp" />

        <Button
            android:id="@+id/time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_32dp"
            android:layout_marginLeft="@dimen/layout_margin_32dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/layout_text_28sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/content_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_32dp"
        android:layout_marginLeft="@dimen/layout_margin_32dp"
        android:layout_marginTop="@dimen/layout_margin_32dp"
        android:layout_marginEnd="@dimen/layout_margin_32dp"
        android:layout_marginRight="@dimen/layout_margin_32dp"
        android:hint="@string/edit_details_hint"
        android:text=""
        android:textSize="@dimen/layout_text_32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/time_view_container" />

</LinearLayout>
