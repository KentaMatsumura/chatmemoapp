<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.bassaer.chatmessageview.view.MessageView
        android:id="@+id/message_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:message_font_size="@dimen/layout_text_20sp"
        app:message_max_width="@dimen/layout_margin_100dp"
        app:time_label_font_size="@dimen/layout_text_16sp"
        app:username_font_size="@dimen/layout_text_16sp" />

</LinearLayout>
